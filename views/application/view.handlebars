{{> application/header app=app }}

<div class="columns">
  <div class="one-third column">
    {{> application/navigation activeItem="home" app=app }}
  </div>
  <div class="two-thirds column">
    <div class="columns">

      <div class="full-width column">
        <h2>Facts</h2>
        <dl class="form">
          <dt><label>Access Token</label></dt>
          <dd><input type="text" class="input-block full-width" value="{{ app.token }}" readonly></dd>
        </dl>
      </div>

      <div class="full-width column">
        <h2>Events</h2>
        <div class="blankslate">
          <span class="mega-octicon octicon-alert"></span>
          <h3>No events recorded</h3>
          <p>Your application did not report any events to meerkat. Make sure it is setup correctly.</p>
        </div>
      </div>

    </div>
  </div>
</div>
